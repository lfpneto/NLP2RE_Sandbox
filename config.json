{
    "path": "data/work_data",
    "namespace": {
        "ns": "req_document.xsd"
    },
    "num_topics_start": 75,
    "num_topics_limit": 95,
    "num_topics_step": 2,
    "filename": "evaluation_results.json",
    "data_preparation": {
        "tokenization": {
            "n_gram_min": 1,
            "n_gram_max": 1
        },
        "stopwords": {
            "remove_stopwords": true,
            "stopword_dynamic": true,
            "stopword_dynamic_source": "custom_stopwords.json"
        },
        "lemma": false,
        "stemma": true,
        "porter_stemmer": false
    },
    "topic_similarity_threshold": 0.6,
    "lsa": {
        "num_topics": 85,
        "min_doc_freq ": 1,
        "normalization": false
    },
    "lda": {
        "num_topics": 85,
        "passes": 15,
        "eval_every": 1,
        "iterations": 100,
        "minimum_probability": 0.01
    }
}